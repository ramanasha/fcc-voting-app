<!doctype html>
<html>

    <% include ./partials/head %>

    <body>

        <% include ./partials/navAuthenticated %>

        <div class="container content">
            <div class="col-xs-12 col-md-10 col-md-offset-1">
                <div class="tableContainer">
                    <h2 class="text-center">Voting App</h2>
                    <p class="text-center">Below are the polls you own.</p><br />
                    <p class="text-center">Select a poll to see the results and vote, or <a href="/newpoll">make a new poll!</a></p>
                    <table class="table table-bordered pollTable">
                        <thead>
                        <tr>
                            <td class="text-center"><strong>Name</strong></td>
                        </tr>
                        </thead>

                        <tbody>
                        <% for(var i = 0; i < polls.length; i++) { %>
                        <tr>
                            <td class="text-center"><a href="/polldetails/<%- polls[i]._id %>"><%= polls[i].name %></a></td>
                        </tr>
                        <% } %>
                        </tbody>

                    </table>
                </div>
            </div>

        </div>

        <% include ./partials/scripts %>

        <style>
            .content {
                margin-top: 75px;
            }
            .tableContainer {
                background-color: #fff;
                box-shadow: 0px 0px 8px #bbb;
                border: 1px solid #ccc;
                border-radius: 8px;
                padding-right: 60px;
                padding-left: 60px;
            }
            .pollTable {
                margin: 20px 0 30px;
            }
        </style>

    </body>
</html>