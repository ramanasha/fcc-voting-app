<!doctype html>
<html>

    <% include ./partials/head %>

    <body>

        <% include ./partials/navNotAuthenticated %>

        <div class="container content">

            <div class="col-xs-12 col-md-10 col-md-offset-1">
                <div class="tableContainer">
                    <h2 class="text-center">Polls</h2>
                    <p class="text-center">Select a poll to see the results and vote, or sign-in to make a new poll</p>
                    <table class="table table-striped pollTable">
                        <thead>
                            <tr>
                                <td class="text-center"><strong>Name</strong></td>
                            </tr>
                        </thead>

                        <tbody>
                            <% for(var i = 0; i < polls.length; i++) { %>
                            <tr>
                                <td class="text-center"><a href="/polldetails/<%- polls[i]._id %>"><%= polls[i].name %></a></td>
                            </tr>
                            <% } %>
                        </tbody>

                    </table>
                </div>
            </div>

        </div>

        <% include ./partials/scripts %>
        <style>
            .content {
                margin-top: 75px;
            }
            .tableContainer {
                background-color: #fff;
                box-shadow: 0px 0px 8px #bbb;
                border: 1px solid #ccc;
                border-radius: 8px;
            }

        </style>
    </body>
</html>